<div class="side-padded">
  <%= form_with(model: paste) do |form| %>
    <% if paste.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <b><%= pluralize(paste.errors.count, "error") %> prohibited this paste from being saved:</b>
        <ul>
          <% paste.errors.each do |error| %>
            <li><small>
              <%= error.full_message %>
            </small></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div style="float: right; width: calc(100% - 450px)">
      <%= form.label :content, "Content:" %>
      <%= form.text_area :content, class: 'form-control', style: 'height: 700px; resize: none',
                                   placeholder: 'Paste your code or text here!', autofocus: true%>
    </div>
    <div class="inner-control">
      <%= form.label :name, "Name:" %>
      <%= form.text_field :name, class: 'form-control', placeholder: 'Untitled' %>
      <%= form.label :language, "Language:" %>
      <%= form.select :language, LANGUAGES, { include_blank: false }, class: 'form-select' %>
    </div>
    <% if current_user %>
      <div class="form-check">
        <%= form.label :private, "Is private", class: 'form-check-label' %>
        <%= form.check_box :private, class: 'form-check-input' %>
      </div>
    <% end %>
    <%= form.submit class: 'btn btn-primary inner-control' %>
  <% end %>
</div>
